<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/screen_margin_xxlarge"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    android:background="@color/transparent"
    android:elevation="@dimen/screen_margin_micro"
    tools:targetApi="m"
    tools:ignore="UnusedAttribute"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:textColor="@color/dark_gray"
            android:padding="@dimen/screen_margin"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/center_toolbar_image"
            android:layout_width="@dimen/drawable_size_toolbar"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            android:padding="@dimen/screen_margin"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_mid"
            android:textColor="@color/dark_gray"
            android:padding="@dimen/screen_margin_small"
            android:layout_toEndOf="@id/ic_left_icon"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/ic_right_icon"
            style="@style/toolbar_right_style"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/screen_margin_small"
            android:visibility="gone"
            android:foreground="?attr/actionBarItemBackground"
            />

        <ImageView
            android:id="@+id/ic_right_icon_secondary"
            style="@style/toolbar_right_style"
            android:contentDescription="@null"
            android:layout_toStartOf="@+id/ic_right_icon"
            android:padding="@dimen/screen_margin_small"
            android:visibility="gone"
            android:foreground="?attr/actionBarItemBackground"
            />

        <ImageView
            android:id="@+id/ic_left_icon"
            style="@style/toolbar_left_style"
            android:layout_width="@dimen/drawable_size"
            android:layout_height="@dimen/drawable_size"
            android:contentDescription="@null"
            android:layout_toEndOf="@id/ic_back_icon"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:foreground="?attr/actionBarItemBackground"
            />

        <ImageView
            android:id="@+id/ic_back_icon"
            style="@style/toolbar_left_style"
            android:contentDescription="@null"
            android:padding="@dimen/screen_margin_mid"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:foreground="?attr/actionBarItemBackground"
            />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
