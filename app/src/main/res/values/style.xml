<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar_right_style">
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/screen_margin_nano</item>
    </style>

    <style name="toolbar_left_style">
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/screen_margin_nano</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">@dimen/screen_margin_nano</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/dark_blue</item>
    </style>

    <style name="empty_state_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/screen_margin</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="ShapeAppearance.OC.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="background">@color/transparent</item>
    </style>
    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorAccent">@color/black</item>
    </style>
</resources>